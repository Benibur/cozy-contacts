.modal-header= t("import call log")
#import-file.modal-body
    p= t('import call log help')
    ul
        li= t('import android calls')
            a(href="https://play.google.com/store/apps/details?id=com.dukemdev",
                target="_blank") Call Log Export
        li= t('import android sms')
            a(href="https://play.google.com/store/apps/details?id=com.smeiti.smstotext",
                target="_blank") SMS To Text

        li= t('import ios calls')
            a(href="https://github.com/mycozycloud/cozy-contacts/blob/master/TODO.md#mobile",
                target="_blank") Github
    .control-group
        label.control-label(for="country")= t("choose phone country")
        .controls
            select#phonecountry
                each code, country in countries
                    option(value=code)= code + ' ' + country

        label.control-label(for="csvupload")= t("choose log file")
        .controls
            input#csvupload(type="file", accept="text/csv;text/plain")
            span.help-inline

#import-config.modal-body
    p= t('ready to import')
    table.table.stripped-table
        thead
            th= t('log direction')
            th= t('log number')
            th= t('log date')
        tbody

#import-confirm.modal-body
    p= t('importing this file')
    p= t('may take a while')

.modal-footer
    a#cancel-btn(href="#").btn= t("cancel")
    a#confirm-btn.btn.disabled.btn-primary= t("import")