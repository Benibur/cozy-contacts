@media (max-width: 900px)

    #contacts-list, #doc, #contact
        width 100%
        left 0px

        #close
          display block

    #contact

      #infotab
        display block

      #right, #left
        width 100%

      #abouts.zone h2
        visibility hidden
        height 10px

      #left
        top 160px
        display none

      #picture
        top 53px