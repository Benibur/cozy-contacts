@font-face
    font-family: styled
    src: url('/fonts/maven-pro-light-300.otf');

@font-face
    font-family: main
    src: url('/fonts/signika-regular.ttf');

box-sizing(n)
  -webkit-box-sizing n
  -moz-box-sizing n
  box-sizing n


bgcolor = #fcfcfc
shadowcolor = #444
basecolor = lightgrey + 40%
highlightcolor = #FFC47F
buttoncolor = #34a6ff
uploadcolor = #34a6ff
almostblack = #555555

html
  height 100%

body
  height 100%
  background-color bgcolor
  font-family main

h1, h2, h3, h4, #name
  font-family styled

// CONTACT LIST

#contacts-list
  width 450px
  position absolute
  left 0px
  top 0px
  bottom 0px
  right 0px

  #toolbar
    height 40px
    padding 1px
    overflow hidden
    padding 10px
    box-sizing border-box

    input:focus
      box-shadow none
      border 1px solid highlightcolor

    .input-append.input-prepend
      float left
      width 65.95744680851064%

    // search logo
    .add-on
      background-color lightgrey
      border-top-left-radius 100%
      border-bottom-left-radius 100%
      border 0px
      height 22px
      i
        margin-top 2px

    #filterClean
      display inline-block
      position relative
      height 26px
      line-height 13px
      text-align center
      width 26px
      background-color red
      padding 0px
      box-sizing border-box
      vertical-align middle
      margin 0px 0px 0px -28px
      border 0px
      border-radius 13px
      z-index 2

    #new, #gohelp
      background-color buttoncolor
      display inline-block
      float left
      margin-left 2.127659574468085%
      width 14.893617021276595%
      text-align center
      line-height 26px
      i
        margin-top 2px

  #contacts
    position absolute
    top 50px
    bottom 0px
    left 0px
    right 0px

    .contact-thumb
      display block
      width 100%
      box-sizing border-box
      background-color basecolor + 50%
      color almostblack
      padding 3px

      img
        float left
        line-height 100%
        height 64px
        width 64px

      h2
        padding 0px
        margin 0px
        margin-left 70px
        font-size 1.6em
        overflow hidden

      span
        display block
        float left
        margin-left 6px


    .contact-thumb:nth-child(even)
      background-color white

    .contact-thumb.activated
      background-color buttoncolor + 40%

    .contact-thumb:hover
      text-decoration none
      background-color highlightcolor

    .contact-thumb:focus
      text-decoration none



#contact, #doc
  // width 50%
  position absolute
  z-index 3
  left 450px
  right 0px
  top 0px
  bottom 0px
  background-color basecolor
  background-image url('../img/background-right.jpg')
  box-shadow: 6px 0px 3px -2px basecolor inset

  #close
    display none
    position absolute
    top 8px
    left 8px
    width 30px
    height 30px
    text-align center
    font-size 30px
    border-radius 30px
    line-height 30px
    background-color buttoncolor
    color white

  #close:hover
    text-decoration none
    background-color highlightcolor
  #close:active
    box-shadow: 1px 3px 2px rgba(0, 0, 0, 0.2) inset, 0 0 0
    background: highlightcolor - 5%

#doc
  padding-left 20px
  padding-top 50px
  box-sizing border-box

#contact

  padding-top 50px

  #picture
    display block
    position absolute
    border 3px solid buttoncolor
    left 8px
    top 20px
    width 64px
    height 64px
    overflow hidden

    img.picture
      position absolute
      display block
      width 64px
      height 64px

    input#uploader
      opacity 0.01
      cursor pointer
      position absolute
      left 0px
      border 0px
      font-size 100px
      bottom 0px
      margin 0px
      width 64px
      height 114px

    #uploadnotice
      width 64px
      height 20px
      background-color buttoncolor
      bottom -20px
      position absolute
      text-align center
      color white

  #picture:hover
    input#uploader
      cursor pointer
    #uploadnotice
      bottom 0px
      transition 0.25s


  input, textarea
    border-radius 0px
    background-color transparent
    display inline-block
    box-shadow none
    margin 0px
    border 1px solid transparent

    &:hover
      border 1px solid buttoncolor

    &:focus
      border 1px solid buttoncolor
      background-color white
      outline none

  #delete
    display block
    position absolute
    right 10px
    top 20px
    padding 0px 5px
    color white
    text-decoration none
    background-color red + 40%
    height 30px
    text-align center
    line-height 30px

  #wrap-name-notes
    position absolute
    top 20px
    left 77px
    right 10px


  ul.tagit
    border 0px
    .tagit-choice
      border-radius 0px
      background-color buttoncolor
      border-color buttoncolor
      .tagit-label, .tagit-close .text-icon
        color white

    input
      &:hover
        border 0px
      &:focus
        border 0px
        background-color transparent
        outline none

  #tags
    display none

  #name
    display block
    line-height 1em
    box-sizing border-box
    width 100%
    padding-left 15px
    font-size 30px
    font-weight bold
    margin-bottom 0px
    border-bottom 1px solid buttoncolor

  #name:focus
    outline none

  #save-info
    position absolute
    top 20px
    right 100px
    height 30px
    line-height 30px
    padding 0px 5px
    background-color #f9edbe


#right, #left
  position absolute
  top 120px
  width 50%

  h2, .nav-tabs li a
    font-family styled
    color inherit
    font-size 31.5px
    line-height 40px
    padding 0px 5px
    font-weight normal
    border-bottom 1px solid lightgrey

#right
  right 0px

  .nav-tabs
    margin-top 10px
    margin-bottom 0px

  #infotab
    display none

  textarea
    width 98%

  #history
    width 100%
    table
      table-layout fixed
      box-sizing border-box
      width 90%
      margin 10px 5%
      thead
        background-color buttoncolor
        color white

      tr
        height 1em
        td:nth-child(1), td:nth-child(2), th:nth-child(1), th:nth-child(2)
          width 18px
        td:nth-child(3),  th:nth-child(3)
          width 30%
        td:nth-child(4)
          overflow hidden
          white-space nowrap
          &:hover
            white-space normal
            overflow visible

      tr.injector
        line-height 0px
        height 2px
        td
          background-color highlightcolor
          height 2px
          padding 0px
          position relative
          a
            display block
            position absolute
            box-sizing border-box
            padding 0px 5px
            bottom 0px
            height 20px
            line-height 20px
            right 0px
            background-color highlightcolor


#left
  left 0px

  .zone
    width 98%
    margin 0% 1%
    padding 0px
    float left

    a.btn.add
      display block
      width 100%
      height 30px
      background-color lightgrey + 70%
      background-image none
      border 0px
      padding 0px
      margin 5px 0px 0px 0px
      border-radius 0px
      line-height 30px
      opacity 0

      &:hover
        background-color lightgrey + 20%

    &:hover a.btn.add
        transition 0.5s
        opacity 1

    ul
      margin 0px
      li
        list-style-type none

        .type
          width 25%
          font-weight bold

        .value
          width 55%

        .dpremove, .dpaction
          width 5%
          height 20px
          float right
          vertical-align middle

        .dpremove
          display none

        &:hover .dpremove
          display inline-block



