@font-face
    font-family: styled
    src: url('/fonts/maven-pro-light-300.otf');

@font-face
    font-family: main
    src: url('/fonts/signika-regular.ttf');

box-sizing(n)
  -webkit-box-sizing n
  -moz-box-sizing n
  box-sizing n


bgcolor = #fcfcfc
shadowcolor = #444
basecolor = lightgrey + 40%
highlightcolor = #fe8800
buttoncolor = #34a6ff
uploadcolor = #34a6ff
almostblack = #555555

html
  height 100%

body
  height 100%
  background-color bgcolor
  font-family main

h1, h2, h3, h4, #name
  font-family styled



#contacts-list
  width 450px
  position absolute
  left 0px
  top 0px
  bottom 0px
  right 0px

  #toolbar
    height 40px
    padding 1px
    overflow hidden
    padding 10px
    box-sizing border-box

    input:focus
      box-shadow none
      border 1px solid highlightcolor

    .input-append.input-prepend
      float left
      width 65.95744680851064%


    // search logo
    .add-on
      background-color lightgrey
      border-top-left-radius 100%
      border-bottom-left-radius 100%
      border 0px
      height 22px
      i
        margin-top 2px

    #filterClean
      display inline-block
      position relative
      height 26px
      line-height 13px
      text-align center
      width 26px
      background-color red
      padding 0px
      box-sizing border-box
      -moz-box-sizing border-box
      vertical-align middle
      margin 0px 0px 0px -28px
      border 0px
      border-radius 13px
      z-index 2

    #new, #gohelp
      background-color buttoncolor
      display inline-block
      float left
      margin-left 2.127659574468085%
      width 14.893617021276595%
      text-align center
      line-height 26px
      i
        margin-top 2px




  #contacts
    position absolute
    top 50px
    bottom 0px
    left 0px
    right 0px

    .contact-thumb
      display block
      width 100%
      box-sizing border-box
      background-color basecolor + 50%
      color almostblack
      padding 3px

      img
        float left
        line-height 100%
        height 64px
        width 64px

      h2
        padding 0px
        margin 0px
        margin-left 70px
        font-size 1.6em
        overflow hidden

      span
        display block
        float left
        margin-left 6px


    .contact-thumb:nth-child(even)
      background-color white

    .contact-thumb.activated
      background-color buttoncolor + 40%

    .contact-thumb:hover
      text-decoration none
      background-color highlightcolor

    .contact-thumb:focus
      text-decoration none


#contact, #doc
  // width 50%
  position absolute
  z-index 3
  left 450px
  right 0px
  top 0px
  bottom 0px
  background-color basecolor
  background-image url('../img/background-right.jpg')
  box-shadow: 6px 0px 3px -2px basecolor inset

#doc
  padding-left 20px
  padding-top 50px
  box-sizing border-box
  -moz-box-sizing border-box

#contact

  padding-top 50px

  #close
    display none
    position absolute
    top 8px
    left 8px
    width 30px
    height 30px
    text-align center
    font-size 30px
    border-radius 30px
    line-height 30px
    background-color buttoncolor
    color white

  #close:hover
    text-decoration none
    background-color highlightcolor
  #close:active
    box-shadow: 1px 3px 2px rgba(0, 0, 0, 0.2) inset, 0 0 0
    background: highlightcolor - 5%


  #picture
    display block
    position absolute
    border 3px solid buttoncolor
    left 8px
    top 20px
    width 64px
    height 64px
    overflow hidden

    img.picture
      position absolute
      display block
      width 64px
      height 64px

    input#uploader
      opacity 0.01
      cursor pointer
      position absolute
      left 0px
      border 0px
      font-size 100px
      bottom 0px
      margin 0px
      width 64px
      height 114px

    #uploadnotice
      width 64px
      height 20px
      background-color buttoncolor
      bottom -20px
      position absolute
      text-align center
      color white

  #picture:hover
    input#uploader
      cursor pointer
    #uploadnotice
      bottom 0px
      transition 0.25s


  input, textarea
    border-radius 0px
    background-color transparent
    display inline-block
    box-shadow none
    margin 0px
    border 1px solid transparent

    &:hover
      border 1px solid buttoncolor

    &:focus
      border 1px solid buttoncolor
      background-color white
      outline none

  #delete
    display block
    position absolute
    right 10px
    top 20px
    padding 0px 5px
    color white
    text-decoration none
    background-color red
    // width 30px
    height 30px
    text-align center
    line-height 30px

  #wrap-name-notes
    position absolute
    top 20px
    left 77px
    right 10px

  #tags
    display none

  ul.tagit
    border 0px
    input
      &:hover
        border 0px
      &:focus
        border 0px
        background-color transparent
        outline none



  #name
    display block
    line-height 1em
    box-sizing border-box
    width 100%
    padding-left 15px
    font-size 30px
    font-weight bold
    margin-bottom 0px
    border-bottom 1px solid buttoncolor

  #name:focus
    outline none

  #notes
    display block
    box-sizing border-box
    width 100%
    padding-left 15px
    resize none
    border 1px solid transparent
  #notes:focus
    border 1px solid buttoncolor

  #save-info
    position absolute
    top 20px
    right 100px
    height 30px
    line-height 30px
    padding 0px 5px
    background-color #f9edbe

  #zones
    position absolute
    top 120px
    left 0px
    right 0px
    bottom 0px

    #notes-zone
      float right

    .zone
      width 48%
      margin 0% 1%
      padding 0px
      // float left

      a.btn.add
        display block
        width 100%
        height 30px
        background-color lightgrey + 70%
        background-image none
        border 0px
        padding 0px
        margin 5px 0px 0px 0px
        border-radius 0px
        line-height 30px
        opacity 0

        &:hover
          background-color lightgrey + 20%

      h2
        margin-left 5px
        font-weight normal
        border-bottom 1px solid lightgrey

      ul
        margin 0px
        li
          list-style-type none
          .type:focus
          .value:focus
            border 1px solid buttoncolor

          .type
            width 25%
            font-weight bold

          .value
            width 65%

    .zone:hover
      a.btn.add
        transition 0.5s
        opacity 1

  #spinOverlay
    position absolute
    top 0px
    left 0px
    height 100%
    width 100%
    background-color black
    color white
    opacity 0.4
    font-size 50px
    line-height 180px
    text-align center
    display none


