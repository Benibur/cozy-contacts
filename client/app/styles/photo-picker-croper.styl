.photoPickerCroper
  padding:0

.photoPicker
  display:flex
  .fp-nav-tabs
    background-color:#ddd
    padding-top:40px
    margin-right:15px
    // border-color:#ddd
    // border-width:15px
  [role='tab']
    padding-right:8px
    padding-left:8px
    width:50px
    height:35px
    font-weight:bold
    color:#3F3F3F
    cursor:pointer
  [aria-selected='true']
    background-color:#fff
  .thumbPicker
    flex:1
  .photoUpload
    flex:1
  [aria-hidden="true"]
    display:none

.thumbsContainer
  img
    border: 5px solid transparent
    height: 120px
    margin-bottom: 2.5px
    margin-right: 2.5px
    cursor:pointer
  img.selected
    border: 5px solid #34a6ff
    border-radius: 3px
    -webkit-border-radius: 3px
    -ms-filter: none
    filter: none

[role='tabpanel']
  position:relative
  overflow-y:auto
  height:100%

.photoUpload
  display:flex
  width:100%
  height:400px

.modal-uploadBtn
  width:100px
  height:25px
  position:absolute
  top:10px

#img-to-crop
  display: block
  max-width:300px
  max-height:300px

#frame-img-preview
  width:100px
  height:100px
  overflow:hidden
  margin-left:30px

#img-preview
  max-width: none

.croper
  padding-left:35px
  .chooseAgain
    position: absolute
    bottom: 0
    right: 9px