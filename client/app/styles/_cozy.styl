orange = #fe8800
blue = #34A6FF

@font-face
    font-family: styled
    src: url('/fonts/maven-pro-light-300.otf');

@font-face
    font-family: main
    src: url('/fonts/signika-regular.ttf');


.button
    border: 0
    background: blue
    color: white
    box-shadow: none
    text-shadow: none
    border-radius: 0
    font-family: main
    font-weight: bold
    padding: 0px

.button:hover
    background: orange
    border: 0
    color: white

.button:active
    background: orange - 3%
    border: 0
    box-shadow: 1px 3px 2px rgba(0, 0, 0, 0.2) inset, 0 1px 2px rgba(0, 0, 0, 0.0)
    color: white

input:hover
    border: 1px solid orange
